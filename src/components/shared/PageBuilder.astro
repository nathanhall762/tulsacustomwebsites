---
import type { Item } from '../../layouts/Layout.astro';
import AboutCard from './page-sections/text-components/SimpleTextCard';
import Accordion from './page-sections/text-components/Accordion';
import BulletStatsCard from './page-sections/text-components/BulletStatsCard';
import Hero from './page-sections/hero-components/Hero';
import InfoCardList from './page-sections/text-components/InfoCardList';
import Sidekick from './page-sections/hero-components/Sidekick';
import TabListCards from './page-sections/text-components/TabListCards';
import TextImagecard from './page-sections/text-components/ImageByCopy';
import Cta from './page-sections/text-components/Cta';
import Testimonial from './page-sections/text-components/Testimonial';
import EuroProjectGallery from './page-sections/image-components/EuroProjectGallery';
const { pageData } = Astro.props;
console.log(`page builder:`);
console.log(pageData);
---

<>
  {
    pageData.map((item: Item) => {
      switch (item.type) {
        case 'hero':
          return <Hero content={item.value} client:idle />;
        case 'sidekick':
          return <Sidekick content={item.value} />;
        case 'welcome_message_section':
          return <AboutCard content={item.value} />;
        case 'info_card_list':
          return <InfoCardList content={item.value} />;
        case 'bullet_stats_card':
          return <BulletStatsCard content={item.value} />;
        case 'tab_list_cards':
          return <EuroProjectGallery content={item.value} client:visible />;
        case 'text_image_card':
          return <TextImagecard content={item.value} />;
        case 'accordion':
          return <Accordion content={item.value} client:visible />;
        case 'cta_section':
          return <Cta content={item.value} />;
        case 'testimonial':
          return <Testimonial content={item.value} />;
        default:
          return null;
      }
    })
  }
</>
