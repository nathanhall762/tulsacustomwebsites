---
import Layout from '../layouts/Layout.astro';
import { readFilesFromDir } from '../readMd';

const dir = 'pages';

const content = readFilesFromDir(dir);

export function getStaticPaths() {
  return [
    { params: { pages: 'clifford' } },
    { params: { pages: 'rover' } },
    { params: { pages: 'spot' } },
  ];
}

const { pages } = Astro.params;
---

<Layout>{pages}</Layout>
