---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AboutCard from '../../components/shared/page-sections/text-components/AboutCard';
import BulletStatsCard from '../../components/shared/page-sections/text-components/BulletStatsCard';
import Accordion from '../../components/shared/page-sections/text-components/Accordion';
import InfoCardList from '../../components/shared/page-sections/text-components/InfoCardList';
import ComparisonSection from '../../components/shared/page-sections/text-components/ComparisonSection';
import TextImagecard from '../../components/shared/page-sections/text-components/TextImageCard';
import TabListCards from '../../components/shared/page-sections/text-components/TabListCards';
import ReviewCards from '../../components/shared/page-sections/text-components/ReviewCards';
import Cta from '../../components/shared/page-sections/text-components/Cta';
import ContactPage from '../../components/shared/page-sections/text-components/CtaLarge';
import Testimonial from '../../components/shared/page-sections/text-components/Testimonial';
import ProjectPageInfo from '../../components/shared/page-sections/text-components/ProjectPageInfo';
---

<BaseLayout
  title='text-components'
  metaDescription='text-components'>
  <AboutCard
    content={{
      heading: 'About Card',
      body_text:
        "This is a card component that can be used to display information about a person or a company. It can be used to display a person's name, title, and a brief description of them. It can also be used to display information about a company, such as its name, location, and a brief description of what it does.",
      link_text: 'Learn More',
      link_url: 'https://example.com',
    }}
  />
  <BulletStatsCard
    heading='Bullet Stats Card'
    ,
    body_text='This is a card component that can be used to display a list of bullet points with accompanying statistics. It can be used to display information such as the number of employees at a company, the number of products a company sells, or the number of years a person has been in business.'
    ,
    image='https://via.placeholder.com/150'
    ,
    image_alt_text='Placeholder Image'
    ,
  />
  <InfoCardList
    heading='Info Card List'
    body_text='This is a list of info cards that can be used to display various pieces of information.'
    card={[
      {
        alt_image_text: 'Alt text for image 1',
        heading: 'Card 1 Heading',
        body_text: 'This is the body text for card 1.',
      },
      {
        alt_image_text: 'Alt text for image 2',
        heading: 'Card 2 Heading',
        body_text: 'This is the body text for card 2.',
      },
      {
        alt_image_text: 'Alt text for image 3',
        heading: 'Card 3 Heading',
        body_text: 'This is the body text for card 3.',
      },
    ]}
  />
  <ComparisonSection />
  <TextImagecard
    heading='Sample Heading'
    image='https://via.placeholder.com/150'
    image_alt_text='Placeholder Image'
    body_text='This is a sample body text for the TextImageCard component.'
    link_url='https://example.com'
    link_text='Learn More'
    reversed={false}
  />
  <TabListCards
    content={{
      heading: 'Sample Heading',
      default_card: {
        heading: 'Default Card Heading',
        body_text: 'This is the body text for the default card.',
        image: 'https://via.placeholder.com/150',
        alt_image_text: 'Placeholder Image',
        call_to_action_text: 'Learn More',
        call_to_action_link: 'https://example.com',
      },
      cards: [
        {
          heading: 'Card 1 Heading',
          body_text: 'This is the body text for card 1.',
          image: 'https://via.placeholder.com/150',
          alt_image_text: 'Placeholder Image',
          call_to_action_text: 'Learn More',
          call_to_action_link: 'https://example.com',
        },
        {
          heading: 'Card 2 Heading',
          body_text: 'This is the body text for card 2.',
          image: 'https://via.placeholder.com/150',
          alt_image_text: 'Placeholder Image',
          call_to_action_text: 'Learn More',
          call_to_action_link: 'https://example.com',
        },
      ],
    }}
  />
  <ReviewCards
    heading='Customer Reviews'
    reviews={[
      {
        name: 'John Doe',
        relativePublishTimeDescription: '2 days ago',
        rating: 5,
        text: {
          text: 'This is an amazing product! Highly recommend it.',
          languageCode: 'en',
        },
        originalText: {
          text: 'This is an amazing product! Highly recommend it.',
          languageCode: 'en',
        },
        authorAttribution: {
          displayName: 'John Doe',
          uri: 'https://example.com/johndoe',
          photoUri: 'https://via.placeholder.com/150',
        },
        publishTime: '2023-10-01T12:00:00Z',
      },
      {
        name: 'Jane Smith',
        relativePublishTimeDescription: '1 week ago',
        rating: 4,
        text: {
          text: 'Good value for the price.',
          languageCode: 'en',
        },
        originalText: {
          text: 'Good value for the price.',
          languageCode: 'en',
        },
        authorAttribution: {
          displayName: 'Jane Smith',
          uri: 'https://example.com/janesmith',
          photoUri: 'https://via.placeholder.com/150',
        },
        publishTime: '2023-09-24T12:00:00Z',
      },
      {
        name: 'Sam Wilson',
        relativePublishTimeDescription: '3 weeks ago',
        rating: 3,
        text: {
          text: 'Decent quality, but could be improved.',
          languageCode: 'en',
        },
        originalText: {
          text: 'Decent quality, but could be improved.',
          languageCode: 'en',
        },
        authorAttribution: {
          displayName: 'Sam Wilson',
          uri: 'https://example.com/samwilson',
          photoUri: 'https://via.placeholder.com/150',
        },
        publishTime: '2023-09-10T12:00:00Z',
      },
    ]}
  />
  <Accordion
    content={{
      heading: 'Accordion',
      question_and_answer: [
        {
          question: 'What is the meaning of life?',
          answer: '42',
        },
        {
          question: 'What is the airspeed velocity of an unladen swallow?',
          answer: 'African or European?',
        },
        {
          question: 'What is the best color?',
          answer: 'Blue',
        },
      ],
    }}
  />
  <Cta
    content={{
      cta: 'Cta',
      button_text: 'Click Here',
    }}
  />
  <ContactPage
    title='Contact Us'
    subHeading="We'd love to hear from you"
    phone='123-456-7890'
    address='123 Main St, Anytown, USA'
    email='contact@example.com'
    names='John Doe, Jane Smith'
    socials={[
      { link: 'https://facebook.com', type: 'Facebook' },
      { link: 'https://twitter.com', type: 'Twitter' },
      { link: 'https://linkedin.com', type: 'LinkedIn' },
    ]}
  />
  <Testimonial
    content={{
      heading: 'Customer Testimonials',
      body: `
### John Doe
> "This product has changed my life! The quality is outstanding and the customer service is top-notch. Highly recommend to everyone."

### Jane Smith
> "A fantastic experience from start to finish. The team was incredibly helpful and the product exceeded my expectations."

### Sam Wilson
> "Good value for the price. The product works as advertised and the support team was very responsive to my inquiries."
	`,
    }}
  />
<ProjectPageInfo
	title="Project Title"
	description="This is a description of the project."
	date="2023-10-01"
	company="Example Company"
	credits={["John Doe", "Jane Smith"]}
/>
</BaseLayout>
