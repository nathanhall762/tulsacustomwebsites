---
import Layout from '../layouts/Layout.astro';
import ProjectGallery from '../components/shared/page-sections/image-components/ProjectGallery';
import Sidekick from '../components/shared/page-sections/hero-components/Sidekick';
import ContactSection from '../components/shared/page-sections/input-components/ContactSection';

import codePicture from '../media/code.png';
import zarnPicture from '../media/zarnPic.png';
import musicPicture from '../media/musicintulsa.png';
import tulsaAnimalRehab from '../media/tulsaAnimalRehab.webp';

// import type { DocumentData } from 'firebase/firestore';
// import { getData } from '../firebase';

// const data = await getData('pages', 'our-work');
// const pageData: DocumentData = data[0];
---

<Layout
  title={'Our Work'}
  metaDescription={'Complete Gallery of Our Work'}
  pageData={{ content: [] }}>
  <Sidekick
    heading='Our Work'
    image={codePicture.src}
    subheading='Check it out'
    call_to_action_text='Hire Us!'
  />
  <ProjectGallery
    galleryHeader='Our Work'
    projects={[
      {
        title: 'Zarn Automotive',
        image: zarnPicture.src,
        link: 'https://zarnautomotive.com/',
      },
      {
        title: 'Music In Tulsa',
        image: musicPicture.src,
        link: 'https://musicintulsa.com/',
      },
      {
        title: 'Tulsa Animal Rehab & Wellness',
        image: tulsaAnimalRehab.src,
        link: 'https://tulsaanimalrehab.com/',
      }
    ]}
  />
  <ContactSection
      heading='Contact Tulsa Custom Websites'
      businessEmail='hello@tulsacustomwebsites.com'
      formContent={{
        heading: 'Tell us about your next project!',
        body: `We'd love to hear about what you are working on and how we can help build it. Please fill out the form below so we can schedule a discovery interview and get started!`,
      }}
    />
</Layout>
